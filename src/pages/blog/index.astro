---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';
import { Image } from 'astro:assets';
const posts = (await getCollection('blog')).sort(
(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">

<head>
	<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
</head>

<body class="bg-black">
	<Header />
	<div>
		<main>
			<section>
				<div class="bg-white py-24 sm:py-32">
					<div class="mx-auto max-w-7xl px-6 lg:px-8">
						<div class="mx-auto max-w-2xl lg:mx-0">
							<h1 class="text-4xl font-bold tracking-tight text-gray-900 sm:text-6xl">From the blog</h2>
								<p class="mt-2 text-xl leading-8 text-gray-600">Learn how to grow your business with our
									expert advice.</p>
						</div>
						<ul
							class="mx-auto mt-10 grid max-w-2xl grid-cols-1 gap-x-16 gap-y-16 border-t border-gray-200 pt-10 sm:mt-16 sm:pt-16 lg:mx-0 lg:max-w-none lg:grid-cols-3">
							{
							posts.map((post) => (
							<li
								class="flex max-w-xl flex-col items-start justify-between border-b border-gray-200 pb-6">

								<div class="group relative w-100 block">
									<div class="w-100">
										<a href={`/blog/${post.slug}/`}> 
										<Image 
											src={post.data.heroImage !} 
											width={600}
											height={200} 
											format='webp'
											class='h-full min-w-full object-cover hover:scale-[102%] transition-all duration-200 rounded-[8px]'
											alt={`img of ${post.data.title}`} 
										/> 
										</a>
									</div>
									<h2>
										<a href={`/blog/${post.slug}/`}> {post.data.title} </a> </h2> <div
											class="flex items-center gap-x-4 text-xs">
											<FormattedDate date={post.data.pubDate} />
								</div>

								<p class="mt-5 line-clamp-3 leading-6 text-gray-600">{post.data.description}</p>
					</div>
					</li>
					))
					}
					</ul>
				</div>
	</div>
	</section>
	</main>
	</div>
	<Footer />
</body>

</html>